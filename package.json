{
  "name": "skeleton-backoffice",
  "version": "1.0.0",
  "description": "API Backoffice boilerplate",
  "author": "Cristian SÃ¡nchez Carretero",
  "url": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "deploy:dev": "sh ./.gitlab/deploy-dev.sh",
    "deploy:tag": "sh ./.gitlab/deploy-tag.sh",
    "docker:env": "docker-compose --file docker/docker-compose.env.yml up --build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "npm:check:updates": "ncu -i --format group",
    "prebuild": "rimraf ./artifacts/dist",
    "prepare": "husky install",
    "start": "export NODE_PATH=./artifacts/dist/src/ && npm run start:prod",
    "start:debug": "nest start --debug --watch",
    "start:dev": "export $(cat .env | xargs) && nest start --watch",
    "start:prod": "node ./artifacts/dist/src/main.js"
  },
  "dependencies": {
    "@adminjs/design-system": "3.1.8",
    "@adminjs/express": "5.1.0",
    "@adminjs/import-export": "2.0.2",
    "@adminjs/nestjs": "5.1.1",
    "@adminjs/typeorm": "4.0.0",
    "@adminjs/upload": "3.0.1",
    "@nestjs/common": "10.2.8",
    "@nestjs/core": "10.2.8",
    "@nestjs/event-emitter": "2.0.2",
    "@nestjs/platform-express": "10.2.8",
    "@nestjs/typeorm": "10.0.0",
    "adminjs": "6.8.7",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "express-formidable": "1.2.0",
    "express-session": "1.17.3",
    "file-saver": "2.0.5",
    "fs-extra": "11.1.1",
    "generate-api-key": "1.0.2",
    "json2csv": "5.0.7",
    "nestjs-pino": "3.5.0",
    "pg": "8.11.3",
    "pino-http": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "typeorm": "0.3.17",
    "xml": "1.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@types/bcrypt": "5.0.1",
    "@types/express": "4.17.20",
    "@types/file-saver": "2.0.6",
    "@types/fs-extra": "11.0.3",
    "@types/json2csv": "5.0.5",
    "@types/node": "20.8.10",
    "@types/validator": "13.11.5",
    "@types/xml": "1.0.10",
    "eslint-config-codely": "2.1.3",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "npm-check-updates": "16.14.6",
    "pino-pretty": "10.2.3",
    "rimraf": "5.0.5",
    "source-map-support": "0.5.21",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
